<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/item_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/exp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小熊猫表情包"
            android:textColor="#666"
            android:paddingBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_1"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:src="@drawable/header"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:layout_width="0dp" />

            <ImageView
                android:id="@+id/image_2"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:src="@drawable/header"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:layout_width="0dp" />

            <ImageView
                android:id="@+id/image_3"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:src="@drawable/header"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:layout_width="0dp" />

            <ImageView
                android:id="@+id/image_4"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:src="@drawable/header"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:layout_width="0dp" />

            <FrameLayout
                android:id="@+id/fl_image_5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp">


                <ImageView
                    android:id="@+id/image_5"
                    android:layout_height="70dp"
                    android:src="@drawable/header"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#5c000000"/>
                <TextView
                    android:id="@+id/exp_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25+"
                    android:textColor="@color/white"
                    android:layout_gravity="center" />
            </FrameLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true">

                <com.ihewro.android_expression_package.view.AvatarImageView
                    android:id="@+id/owner_avatar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/header"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/owner_name"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="今晚月光真美"
                    android:textColor="#a4a1a1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/download_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal">
                <TextView
                    android:background="@drawable/bg_download"
                    android:textColor="@color/primaryColor"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载全套"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>